<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText android:hint="Título"
            android:id="@+id/formulario_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Conteúdo"
            android:id="@+id/formulario_conteudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:hint="Data"
            android:id="@+id/formulario_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="Observações"
            android:id="@+id/formulario_observacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Aqui é usado para dar estrelinhas: -->

        <RatingBar
            android:id="@+id/formulario_nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:max="10"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>